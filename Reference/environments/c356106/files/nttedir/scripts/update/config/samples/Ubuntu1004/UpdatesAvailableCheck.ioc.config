ioc.services = logger,email,updates
logger.class = NTTEU::USF::Logger::RollingFileLogger
logger.argc = 2
logger.argv.1 = /var/log/updates/updates_ntt
logger.argv.2 = 5
email.class = NTTEU::USF::EMail::UnixSystemEMail
email.argc = 3
email.argv.1 = /usr/bin/mail
email.argv.2 = /bin/mktemp
email.argv.3 = $svc{logger}
updates.class = NTTEU::USF::Updates::AptitudeUpdates
updates.argc = 2
updates.argv.1 = /usr/bin/aptitude
updates.argv.2 = $svc{logger}
