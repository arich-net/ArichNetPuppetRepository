[sssd]
services = nss, pam
config_file_version = 2
domains = NTTENG

[nss]
filter_groups = root,bin,daemon,sys,adm,tty,disk,lp,mem,kmem,wheel,mail,uucp,man,games,gopher,video,dip,ftp,lock,audio,nobody,users,floppy,vcsa,utmp,utempter,rpc,cdrom,tape,dialout,rpcuser,nfsnobody,sshd,cgred,puppet,saslauth,postdrop,postfix,screen,ntp,apache
filter_users = root,bin,daemon,adm,lp,sync,shutdown,halt,mail,uucp,operator,games,gopher,ftp,nobody,vcsa,rpc,rpcuser,nfsnobody,sshd,puppet,saslauth,postfix,ntp,apache

[pam]
offline_credentials_expiration = 2

[domain/default]
cache_credentials = true

[domain/NTTENG]
id_provider = ldap
min_id = 10000
max_id = 20000
enumerate = true

auth_provider = ldap
use_fully_qualified_names = false
case_sensitive = true

<% if @ad_secondary -%>
ldap_uri = ldap://<%=@ad_primary%>/,ldap://<%=@ad_secondary%>/
<% else -%>
ldap_uri = ldap://<%=@ad_primary%>/
<% end -%>
ldap_search_base = ou=NTT EO,dc=ntteng,dc=ntt,dc=eu
ldap_default_bind_dn = cn=NTTEO LDAP Service,cn=Users,dc=ntteng,dc=ntt,dc=eu
ldap_default_authtok = zujs6XUdkF
ldap_id_use_start_tls = true
ldap_tls_reqcert = allow
ldap_schema = rfc2307bis
ldap_user_object_class = user
ldap_user_name = sAMAccountName
ldap_user_home_directory = unixHomeDirectory
ldap_user_shadow_last_change = pwdLastSet
ldap_group_object_class = group

chpass_provider = none
